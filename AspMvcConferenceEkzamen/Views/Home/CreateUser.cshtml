@model AspMvcConferenceEkzamen.Models.ViewModel

<div> @Model.Conf.Name</div>

    <<h2>Регистрация на конференцию</h2>
<form asp-action="AddUser" asp-controller="home" method="post" enctype="multipart/form-data">
    <p>
    <input type="hidden" asp-for="Conf.id" value="@Model.Conf.id"/>
    </p>
    <p>
    <input type="hidden" asp-for="Conf.Name" value="@Model.Conf.Name"/>
    </p>
    <p>
    <input type="hidden" asp-for="Conf.Organizer" value="@Model.Conf.Organizer"/>
    </p>
    <p>
    <input type="hidden" asp-for="Conf.Sponsors" value="@Model.Conf.Sponsors"/>
    </p>
    <p>
    <input type="hidden" asp-for="Conf.Scenario" value="@Model.Conf.Scenario"/>
    </p>
    <p>
    <input type="hidden" asp-for="Conf.Speakers" value="@Model.Conf.Speakers"/>
    </p>

    <p>
        <label asp-for="Usr.Name">Имя</label><br />
        <input type="text" asp-for="Usr.Name"/>
    </p>
    <p>
        <label asp-for="Usr.Surname">Фамилия</label><br />
        <input type="text" asp-for="Usr.Surname"/>
    </p>
    <p>
        <label asp-for="Usr.Email">Email</label><br />
        <input type="text" asp-for="Usr.Email"/>
    </p>
    <p>
        <label asp-for="Usr.PhoneNumber">Номер телефона</label><br />
        <input type="text" asp-for="Usr.PhoneNumber"/>
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>